 }}

<main class="main">
  <div class="main-title">
    {{> heading title=title }}
  </div>

  <div class="main-list">
    {{#with data.purchases}}
        {{#each list}}
          {{> product-item }}  
                
          {{> divider}}
          
        {{/each}}        
    {{/with}}        
  </div>
  
</main>

